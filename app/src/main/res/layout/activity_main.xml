<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/latitud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="Latitud:"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/tv_latitud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/latitud"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/latitud"
            android:text="..."
            android:textSize="16sp" />
        <TextView
            android:id="@+id/longitud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="24dp"
            android:text="Longitud:"
            android:textSize="18sp" />
        <TextView
            android:id="@+id/tv_longitud"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/longitud"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/longitud"
            android:text="..."
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_localitzar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:text="Localitza'm"
            android:textSize="10sp" />
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/frame_mapa"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" />

</LinearLayout>